  "main": "bin/cli.js",
  "author": "Marcos Mellado <marcos.mellado@akqa.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "contentful-export": "^7.6.0",
    "contentful-import": "^7.5.1",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
